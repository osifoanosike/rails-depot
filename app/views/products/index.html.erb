<h3 class="header-section">Products</h3>

<%= link_to 'New Product', new_product_path, class: 'btn btn-danger pull-left' %>

<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><a href="<%= product_path(product) %>"><%= image_tag(product.image_url, class: "list_image", width:"50px" ) %></a></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        
        <td><%= product.price %></td>
        <td>
          <section>
            <a href="<%= edit_product_path(product) %>"><i class="fa fa-edit"></i></a>
            <%= link_to content_tag(:i, nil,  class: "fa fa-trash"), product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </section>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>