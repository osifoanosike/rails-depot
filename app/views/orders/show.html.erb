<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.payment_type %>
</p>

<%= button_to ship_order_path(@order), data: { confirm: "This action is irreversible,\nPlease make necessary confirmations" }, class: 'btn btn-danger' do %>
    <%= content_tag(:i, nil, class: "fa fa-close") %>
    <span>Mark as Shipped</span>
<% end %>
