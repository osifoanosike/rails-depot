<h1>Orders</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Order Nos</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Payment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order do %>
            <%= content_tag(:span, order.id.to_s.rjust(7, '0')) %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <% if order.payment_type %>
        <td><%= order.payment_type.name %></td>
        <% else %>
          <td><%= order.payment_type %></td>
        <% end %>
        <td>
          <section>
            <a href="<%= edit_order_path(order) %>"><i class="fa fa-edit"></i></a>
            <%= link_to content_tag(:i, nil,  class: "fa fa-trash"), order, method: :delete, data: { confirm: 'Are you sure?' } %>
          </section>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
